FROM nginx:1.25.4-alpine-slim

ARG NGINX_NAME
COPY ${NGINX_NAME} /etc/nginx/templates/default.conf.template

ARG SERVER_NAME_DEV
ENV SERVER_NAME_DEV=$SERVER_NAME_DEV

ARG SERVER_HOST_DEV
ENV SERVER_HOST_DEV=$SERVER_HOST_DEV

ARG SERVER_NAME_QA
ENV SERVER_NAME_QA=$SERVER_NAME_QA

ARG SERVER_HOST_QA
ENV SERVER_HOST_QA=$SERVER_HOST_QA
